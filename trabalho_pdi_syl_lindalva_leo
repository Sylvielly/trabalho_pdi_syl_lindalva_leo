%Link do relatorio: <https://docs.google.com/document/d/12BtVcwYm_Q-KZEC8uthgxDNWhi0AqZwnXa0EbyerdB8/edit?usp=sharing>
%Link da apresentacao:<https://www.overleaf.com/project/6332e89cac726f6047466f5d> 

%TRABALHO PDI
clc
clear all
pkg load image     %roda biblioteca

%leitura da imagem
Imagem = imread("PDI.jpg");
subplot(1,2,1)
imshow(Imagem);
title('Imagem original');
grid on
hold on

%escala de cinza
Img_cinza=rgb2gray(Imagem);
subplot(1,2,2)
imshow(Img_cinza);
title('Imagem em escala de cinza');
grid on
hold on

figure(2)
subplot(1,2,1)
imhist(Imagem);
title('Histograma da imagem original');
grid on
hold on

subplot(1,2,2)
imhist(Img_cinza);
title('Histograma da imagem em escala de cinza');
grid on
hold on

%equalizando a imagem
figure(3)
J=histeq(Img_cinza);
subplot(1,2,1)
imshow(J);
title('Imagem em escala de cinza equalizada');
grid on
hold on

Jeq=histeq(J);
subplot(1,2,2)
imhist(Jeq);
title('Histograma da imagem em escala de cinza equalizada');
grid on
hold on

figure(4)
subplot(1,3,1)
imshow(Jeq);
title('Imagem equalizada em escala de cinza');
grid on
hold on

%ajuste na imagem
Img_ajuste = imadjust (Img_cinza, [0.4; 0.8], [0; 1]);
subplot(1,3,2)
imshow(Img_ajuste);
title('Ajuste da imagem');
grid on
hold on

subplot(1,3,3)
imhist(Img_ajuste);
title('Histograma da imagem');
grid on
hold on
