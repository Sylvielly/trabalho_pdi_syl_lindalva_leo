%Link da apresentacao:<https://www.overleaf.com/project/6332e89cac726f6047466f5d> 

%TRABALHO PDI
clc
clear all
pkg load image     %roda biblioteca

%leitura da imagem
Imagem = imread("PDI.jpg");
imshow(Imagem);

%escala de cinza
Img_cinza=rgb2gray(Imagem);
figure(2)
imshow(Img_cinza);
figure(3)
imhist(Imagem);
figure(4)
imhist(Img_cinza);

%equalizando a imagem
J=histeq(Img_cinza);
figure(5)
imshow(J);
Jeq=histeq(J);
figure(6)
imhist(Jeq);
figure(7)
imshow(Jeq);

%ajuste na imagem
Img_ajuste = imadjust (Img_cinza, [0.2; 0.9], [0; 1]);
figure(8)
imshow(Img_ajuste);
figure(9)
imhist(Img_ajuste);


               
